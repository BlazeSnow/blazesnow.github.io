:80 {
	root * /app

	try_files {path} {path}/index.html {path}/ = 404
	file_server

	handle_errors {
		@notfound expression `{err.status_code} == 403 || {err.status_code} == 404`
		handle @notfound {
			rewrite * /404.html
			file_server
		}
	}

	@assets {
		header Cache-Control "public, immutable"
		header Expires "1y"
	}
}
