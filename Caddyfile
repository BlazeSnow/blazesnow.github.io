:80 {
	root * /app

	try_files {path} {path}.html {path}/ = 404
	file_server

	handle_errors {
		@notfound expression `{err.status_code} == 403 || {err.status_code} == 404`
		handle @notfound {
			rewrite * /404.html
			file_server
		}
	}

	handle /assets/* {
		header Cache-Control "public, immutable"
		header Expires "1y"
		file_server
	}
}
